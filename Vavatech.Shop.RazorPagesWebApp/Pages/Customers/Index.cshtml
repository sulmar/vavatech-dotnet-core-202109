@page
@model Vavatech.Shop.RazorPagesWebApp.Pages.Customers.IndexModel


<h1>@Model.Message</h1>


<table class="table table-dark table-striped">

    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>PESEL</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var customer in @Model.Customers)
        {
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Pesel</td>

                <td>
                    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@customer.Id">Edit</a>
                </td>
            </tr>
        }

    </tbody>

</table>

